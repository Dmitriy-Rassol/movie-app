{
  "compilerOptions": {
    // ... your other compiler options
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@stores/*": ["src/stores/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "./tsconfig.app.json",
      "disableOutputPath": true
    },
    {
      "path": "./tsconfig.node.json",
      "disableOutputPath": true
    }
  ]
}
